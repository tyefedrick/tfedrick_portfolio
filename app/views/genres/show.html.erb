<h1><%= @genre.name %></h1>

<%= link_to 'Edit', edit_genre_path(@genre) %>
<%= button_to 'Delete', genre_path(@genre), method: :delete, data: { confirm: 'Are you sure you want to delete this genre?' }, class: 'btn btn-danger' %>
<%= button_to 'Back to Genres', new_genre_path, method: :get, class: 'btn btn-primary' %>
