<div class="container-md text-center">
  <h1>Want to work with me? <br> Reach out today!</h1>
</div>

<div class="container-md">
  <%= form_with(url: create_contact_path, method: :post, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :full_name %>
      <%= form.text_field :full_name, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :message %>
      <%= form.text_area :message, class: "form-control", required: true, rows: 6, cols: 40 %>
      <!-- Adjust the 'rows' and 'cols' values as needed -->
    </div>

    <%= form.submit "Send Message", class: "btn btn-primary" %>
  <% end %>
</div>
