<div class="container-md">
  <div class="row">
    <div class="col-md-12">
      <div class="d-flex justify-content-between">
        <%= button_to "Edit", edit_book_review_path(@book_review), method: :get %>
        <%= button_to "Delete", book_review_path(@book_review), method: :delete, data: { confirm: "Are you sure?" } %>
    </div>

      <div class="review-details">
        <p>Title: <%= @book_review.title %></p>
        <p>Description Title <%= @book_review.description_title %></p>
        <p>Genres: <%= @book_review.genres.pluck(:name).join(', ') %></p>
        <p>Authors: <%= @book_review.authors.pluck(:name).join(', ') %></p>
        <p>Rating: <%= @book_review.rating %></p>
        <p>Body: <%= @book_review.body %></p>
        <p>Notes: <%= @book_review.notes %></p>
        <p>Release Date: <%= @book_review.release_date %></p>
        <p>Page Count: <%= @book_review.page_count %></p>
        <p>Review Posted Date: <%= @book_review.review_posted_date %></p>
        <p>ISBN: <%= @book_review.isbn %></p>
        <p>Publisher: <%= @book_review.publisher %></p>
        <p>Link: <%= @book_review.link %></p>

        <div class="review-details">
        
          <% if @book_review.image.attached? %>
          <%= image_tag @book_review.image %>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>