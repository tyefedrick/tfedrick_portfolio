<%=form_with(model:book_review) do |form|%>
    <div>
        <%=form.label :title, style: "display:block"%>
        <%=form.text_field :title %>
    </div>

    <div>
        <%= form.label :genre_ids, 'Genres', style: 'display:block' %>
        <%= form.collection_select(:genre_ids, Genre.all, :id, :name, {}, multiple: true) %>
    </div>

    <div>
        <%=form.label :rating, style: "display:block"%>
        <%=form.text_field :rating %>
    </div>

    <div>
        <%=form.label :body, style: "display:block"%>
        <%=form.rich_text_area :body %>
    </div>

    <div>
        <%=form.label :notes, style: "display:block"%>
        <%=form.text_area :notes%>
    </div>

    <%=form.submit %>
<%end%>

