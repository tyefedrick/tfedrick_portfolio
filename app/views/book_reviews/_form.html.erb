<%=form_with(model:book_review) do |form|%>
    <div>
        <%=form.label :title, style: "display:block"%>
        <%=form.text_field :title %>
    </div>

    <div>
        <%=form.label :genre, style: "display:block"%>
        <%=form.text_field :genre %>
    </div>

    <div>
        <%=form.label :rating%>
    </div>

    <div>
        <%=form.label :body, style: "display:block"%>
        <%=form.text_area :body %>
    </div>




    <%= @book_review.rating %>
    <%= @book_review.body %>
    <%= @book_review.notes %>


    <%=form.submit %>
<%end%>

