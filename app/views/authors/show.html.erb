<h1><%= @author.name %></h1>

<%= link_to 'Edit', edit_author_path(@author) %>
<%= button_to 'Delete', author_path(@author), method: :delete, data: { confirm: 'Are you sure you want to delete this author?' }, class: 'btn btn-danger' %>
<%= button_to 'Back to Author', new_author_path, method: :get, class: 'btn btn-primary' %>
