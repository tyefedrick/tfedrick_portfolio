<div class="container-md">
  <div class="row">
    <div class="col-md-7">
      <h1>Portfolios</h1>

    </div>
  </div>
</div>


<div id="portfolios">
  <% @portfolios.each_with_index do |portfolio, index| %>
    <% if index % 3 == 0 %>
      <div class="row">
    <% end %>
    
    <div class="col-md-4">
      <div class="portfolio-item">
        <%= render portfolio %>
      
        <p>
          <%= link_to "Show this portfolio", portfolio %>
        </p>
      </div>
    </div>

    <% if (index + 1) % 3 == 0 || index == @portfolios.size - 1 %>
      </div>
    <% end %>
  <% end %>
</div>

<%= link_to "New portfolio", new_portfolio_path %>

<style>
  .portfolio-item {
    border: 1px solid #ccc; /* Add a border around each item */
    padding: 10px; /* Add some padding to create space between the content and the border */
    margin: 10px; /* Add margin to create space between each portfolio item */
    box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.3); /* Add a subtle box shadow for a 3D effect */
    border-radius: 5px; /* Optionally, round the corners of the box */
  }
</style>
